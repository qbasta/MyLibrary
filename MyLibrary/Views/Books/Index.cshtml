@model BookViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="my-2">
    <form class="row row-cols-lg-auto g-3 align-items-center">
  <div class="col-12">
    <label class="visually-hidden" for="inlineFormSelectPref">Genres</label>
    
    <select class="form-select" id="genreId" name="genreId">
      <option selected>Choose...</option>
                @foreach(var genre in Model.Genres)
                {
                    <option selected="@(genre.Id == Model.GenreId)" value="@genre.Id">@genre.GenreName</option>
                }
            </select>
  </div>

        <div class="col-12">
            <label class="visually-hidden" for="sTerm">Search book</label>
            <div class="input-group">
                <div class="input-group-text"></div>
                <input type="text" class="form-control" value="@Model.STerm" id="sTerm" name="sTerm" placeholder="Enter phrase">
            </div>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Search</button>
            <a href="/Books/Index" class="btn btn-primary">Clear filter</a>
        </div>
    </form>
</div>



<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="w-100 mt-4 d-flex flex-wrap">
    @foreach (var item in Model.Books)    
    {
        <div class="card mx-3 mb-4" style="width: 16rem;">
            @if (string.IsNullOrEmpty(item.Image))
            {
                <img style="width:100%;height:300px" src="/images/NoImage.png" class="card-img-top" alt="...">

            }
            else
            {
                <img style="width:100%;height:300px" src="/images/@item.Image" class="card-img-top" alt="...">
            }
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">
                    Genre: @item.GenreName
                    Author: @item.AuthorName
                    Price: @item.Price
                </p>
                <a href="#" class="btn btn-primary">Add to cart</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </div>
        </div>
    }
</div>

